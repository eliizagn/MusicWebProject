@page
@model MusicWebProject.Pages.Songs.IndexModel

<a type="button" class="btn btn-outline-primary" asp-page="/Songs/CreateSong"> Add Song </a>
<form method="get">
    <input type="text" asp-for="SearchingString"/>
    <button type="submit" class="btn btn-outline-primary">
        Search
    </button>
</form>
<div>
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>Name</th>
                <th>Singer</th>
                <th>Album</th>
                <th>Genre</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model.Songs)
            {
                <tr class="table-light">
                    <td>@song.Name</td>
                    <td>@song.Singer.Name</td>
                    <td>@song.Album.Name</td>
                    <td>@song.Genre.Name</td>
                    <td>
                        <form method="post">
                            <button class="btn btn-outline-primary" asp-route-id="@song.Id">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>