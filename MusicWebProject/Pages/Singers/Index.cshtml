@model MusicWebProject.Pages.Singers.IndexModel

<!--
    <></> - теги
//thead - наименования столбцов (условно), tbody - сами строки
th tr -почитать
bootstrap
-->
<div>
<a type="button" class="btn btn-outline-primary" " asp-page="/Singers/CreateSinger"> New Singer </a>
<form method="get">
        <input type="text" class="btn-outline-primary" asp-for="SearchingString" />
    <button type="submit" class="btn btn-outline-primary">
        Search
    </button>
</form>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th class="table-primary">ID</th>
                <th class="table-primary">Name</th->
            </tr>
        </thead>
        <tbody>
            @foreach (var singer in Model.Singers)
            {
                <tr>
                    <td class="table-light">@singer.Id</td>
                    <td class="table-light">@singer.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

