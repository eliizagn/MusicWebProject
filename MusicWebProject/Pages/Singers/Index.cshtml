@page
<!--//обращение к Index.cshtml.cs
-->
@model MusicWebProject.Pages.Singers.IndexModel

<!--
    <></> - теги
//thead - наименования столбцов (условно), tbody - сами строки
th tr -почитать
bootstrap
-->
<div>
<a type="button" class="btn btn-outline-primary" asp-page="/Singers/CreateSinger"> New Singer </a>
<form method="get"> 
    <input type="text" asp-for="SearchingString"/>
    <button type="submit" class="btn btn-outline-primary">
        Search
    </button>
</form>
</div>
<div>
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var singer in Model.Singers)
            {
                <tr class="table-light">
                    <td>@singer.Id</td>
                    <td>@singer.Name</td>
                    <td>
                        <form method="post">
                            <button class="btn btn-outline-primary" asp-route-id="@singer.Id">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

